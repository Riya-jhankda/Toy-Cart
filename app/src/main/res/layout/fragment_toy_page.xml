<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toy_page">


    <ImageView
        android:id="@+id/toy_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="108dp"
        android:src="@drawable/rc_car_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/merienda_bold"
        android:text="RC Car"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/toy_image"
        app:layout_constraintStart_toStartOf="@+id/toy_image"
        app:layout_constraintTop_toBottomOf="@+id/toy_image" />

    <TextView
        android:id="@+id/toy_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/judson"
        android:text="A remote control car that comes with a steering wheel and a set of brake &amp; accelarator"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toy_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buyNow"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/buynow"
        app:layout_constraintBottom_toBottomOf="@+id/addToCart"
        app:layout_constraintEnd_toStartOf="@+id/addToCart"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addToCart"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addToCart"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/addtocart"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buyNow"
        app:layout_constraintTop_toBottomOf="@+id/toy_des" />

</androidx.constraintlayout.widget.ConstraintLayout>
